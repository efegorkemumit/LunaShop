<div class="bg-white p-8 shadow-md rounded-md m-4">
  <h1 class="text-4xl font-semibold mb-8">{{ page_title }}</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {%- for article in blog.articles -%}
    <div class="bg-gray-100 p-6 rounded-md">
      <div class="relative overflow-hidden">
        <img
          src="{{ article.image | img_url: '600x400' }}"
          alt="{{ article.title }}"
          class="mb-4 rounded-md">
          {%- if section.settings.blog_show_author -%}
          <span class="absolute top-0 right-0 bg-blue-600 text-white py-1 px-2 rounded-tr-md rounded-bl-md text-xs"> By {{ article.author }}</span>

        {%- endif -%}

      </div>
      <h2 class="text-2xl font-semibold mb-2">{{ article.title }}</h2>
      <p class="text-gray-700 mb-4">
        {%- if article.excerpt.size > 0 -%}
        {{ article.excerpt }}
      {%- else -%}
        {{ article.content | strip_html | truncate: 150 }}
      {%- endif -%}
         

      
      </p>
      
      <a href="{{ article.url }}" class="text-blue-600 hover:underline inline-block">Read me More</a>
    </div>
  {%- endfor -%}
  
</div>

{% schema %}
    {
      "name": "Blog pages",
      "settings": [
        {
          "type": "checkbox",
          "id": "blog_show_author",
          "label": "Show author",
          "default": true
        }
       
      ]
    }
    {% endschema %}
