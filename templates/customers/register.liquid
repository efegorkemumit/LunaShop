<div class="h-full flex items-center justify-center py-12 px-6 md:px-4">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">
        Register
      </h1>
    </div>
    <div class="mt-8">
      {% form 'create_customer' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">

            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">
              {{ form.errors | default_errors }}</p>
          </div>

        {% endif %}

        <div class="my-2">
          <label class="sr-only" for="first-name">First name</label>
          <input
            class="relative block w-full px-3 py-2 border"
            type="text"
            placeholder="First name"
            name="customer[first_name]">
        </div>

        <div class="my-2">
          <label class="sr-only" for="last-name">Last name</label>
          <input
            class="relative block w-full px-3 py-2 border"
            type="text"
            placeholder="Last name"
            name="customer[last_name]">
        </div>

        <div class="my-2">
          <label class="sr-only" for="email">Email</label>
          <input
            class="relative block w-full px-3 py-2 border"
            type="email"
            placeholder="Email"
            name="customer[email]">
        </div>

        <div class="my-2">
          <label class="sr-only" for="password">Password</label>
          <input
            class="relative block w-full px-3 py-2 border"
            type="password"
            placeholder="Password"
            name="customer[password]">
        </div>

        <div class="my-2">
          <input
            class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-900 hover:bg-gray-600"
            type="submit"
            value="Create">
        </div>
      {% endform %}
    </div>
  </div>
</div>